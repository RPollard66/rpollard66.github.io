@model AppLabsMVC.Models.Level2.PalindromeRequest

@{
    ViewBag.Title = "PalindromeQuery";
}

<h1 style="color:ghostwhite ">Palindrome</h1>

<div class="navbar navbar-inverse col-sm-12">

    <div class="navbar-collapse" data-toggle="collapse" data-target=".navbar-inverse-collapse">
        <ul class="nav navbar-nav">

            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("App Labs", "Index", "AppLabs")</li>
        </ul>

    </div>
</div>



@using (Html.BeginForm("PalindromeVerdict", "Level2", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="text-center">

        @Html.EditorFor(model => model.UserChoice)

        <input type="submit" value="Submit" class="btn btn-default" />
    </div>

}

<blockquote style="margin-top: 15px">
    <p>This app takes in a string of words (or one word) and tells whether it is a palindrome.</p>
</blockquote>

