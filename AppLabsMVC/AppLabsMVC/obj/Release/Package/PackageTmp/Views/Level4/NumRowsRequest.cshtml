@model AppLabsMVC.Models.Level4.NumericRequest

@{
    ViewBag.Title = "PascalsTriangle";
}

<h1 style="color:ghostwhite ">Pascal's Triangle</h1>

<div class="navbar navbar-inverse col-sm-12">

    <div class="navbar-collapse" data-toggle="collapse" data-target=".navbar-inverse-collapse">
        <ul class="nav navbar-nav">

            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("App Labs", "Index", "AppLabs")</li>
        </ul>

    </div>
</div>

<div class="row">
    <div class="col-sm-10">
        <h4>Choose the number of rows to print out</h4>

        @using (Html.BeginForm("DisplayPascalsTriangle","Level4", FormMethod.Post, new{role="form"}))
        {

            @Html.EditorFor(n => n.PascalInput)

            <button type="submit" class="btn btn-success">Submit</button>
        }

    </div>

</div>

<blockquote style="margin-top: 15px">
    <p>This app generates Pascal's Triangle.</p>

</blockquote>